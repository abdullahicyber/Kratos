<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingVertical="4dp" android:gravity="end">

    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:padding="10dp" android:background="#DCF8C6" android:orientation="vertical"
        android:minWidth="72dp" android:maxWidth="280dp">

        <TextView
            android:id="@+id/msgText"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="11sp" android:textColor="#7A7A7A"
            android:layout_gravity="end" android:paddingTop="4dp"/>
    </LinearLayout>
</LinearLayout>
