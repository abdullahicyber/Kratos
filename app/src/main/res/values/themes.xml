<resources>
    <!-- App theme -->
    <style name="Theme.Kratos" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/kratos_orange</item>
        <item name="colorPrimaryVariant">@color/kratos_orange</item>  <!-- dÃ¹ng cho status bar/AppBar -->
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/kratos_orange</item>
        <item name="colorSecondaryVariant">@color/kratos_orange</item>
        <item name="colorOnSecondary">@color/white</item>


        <item name="android:colorBackground">@color/kratos_background</item>
        <item name="colorSurface">@color/kratos_background</item>

        <!-- System bars -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>


        <item name="shapeAppearanceSmallComponent">@style/KratosShape.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/KratosShape.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/KratosShape.Large</item>
    </style>

    <style name="KratosShape.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>
    <style name="KratosShape.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="KratosShape.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>


    <style name="Theme.Kratos.Auth" parent="Theme.Kratos"/>
</resources>
